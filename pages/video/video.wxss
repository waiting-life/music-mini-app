.video_container .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}
.video_container .header .search {
  flex: 1;
  margin: 0 20rpx;
  border: 1rpx solid #eee;
  line-height: 60rpx;
  color: #d43c33;
  text-align: center;
}
.video_container .header image {
  width: 60rpx;
  height: 60rpx;
}
.video_container .video_nav {
  display: flex;
  margin-bottom: 20rpx;
  height: 60rpx;
}
.video_container .video_nav .nav_item {
  flex-shrink: 0;
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}
.video_container .video_nav .nav_item .nav_content {
  height: 60rpx;
}
.video_container .video_nav .active {
  border-bottom: 2rpx solid var(--themeColor);
}
.video_container .video_list {
  height: calc(100vh - 163rpx);
}
.video_container .video_list .video_item {
  padding: 0 20rpx;
}
.video_container .video_list .video_item .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.video_container .video_list .video_item .video_title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.video_container .video_list .video_item .video_footer {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.video_container .video_list .video_item .video_footer .video_user_info {
  display: flex;
  align-items: center;
}
.video_container .video_list .video_item .video_footer .video_user_info .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.video_container .video_list .video_item .video_footer .video_user_info .nickname {
  font-size: 26rpx;
  margin-left: 20rpx;
}
.video_container .video_list .video_item .video_footer .comments_praised {
  display: flex;
  align-items: center;
}
.video_container .video_list .video_item .video_footer .comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}
.video_container .video_list .video_item .video_footer .comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
.video_container .video_list .video_item .video_footer .comments_praised .btn {
  background-color: transparent;
  border-color: transparent;
  width: 20rpx;
  padding: 0;
}
